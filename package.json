{
  "name": "selection-path-copier",
  "displayName": "Selection Path Copier",
  "description": "Copy file paths with line numbers, code snippets, and GitHub permalinks in multiple formats",
  "version": "1.3.1",
  "publisher": "yoshi47",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "path",
    "copy",
    "github",
    "line",
    "selection",
    "reference",
    "clipboard",
    "productivity",
    "utility",
    "permalink"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yoshi47/selection-path-copier"
  },
  "bugs": {
    "url": "https://github.com/yoshi47/selection-path-copier/issues"
  },
  "homepage": "https://github.com/yoshi47/selection-path-copier#readme",
  "license": "MIT",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "selection-path-copier.copyPath",
        "title": "Copy Path",
        "category": "Selection Path Copier"
      },
      {
        "command": "selection-path-copier.copyPathWithCode",
        "title": "Copy Path with Code",
        "category": "Selection Path Copier"
      },
      {
        "command": "selection-path-copier.copyGithubPermalink",
        "title": "Copy GitHub Permalink",
        "category": "Selection Path Copier"
      },
      {
        "command": "selection-path-copier.copyGithubPermalinkWithCode",
        "title": "Copy GitHub Permalink with Code",
        "category": "Selection Path Copier"
      }
    ],
    "keybindings": [
      {
        "command": "selection-path-copier.copyPath",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "selection-path-copier.copyPathWithCode",
        "key": "ctrl+alt+shift+c",
        "mac": "cmd+alt+shift+c"
      },
      {
        "command": "selection-path-copier.copyGithubPermalink",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      },
      {
        "command": "selection-path-copier.copyGithubPermalinkWithCode",
        "key": "ctrl+alt+shift+p",
        "mac": "cmd+alt+shift+p"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "selection-path-copier.copyPath",
          "group": "9_cutcopypaste@3"
        },
        {
          "command": "selection-path-copier.copyPathWithCode",
          "group": "9_cutcopypaste@4"
        },
        {
          "command": "selection-path-copier.copyGithubPermalink",
          "group": "9_cutcopypaste@5"
        },
        {
          "command": "selection-path-copier.copyGithubPermalinkWithCode",
          "group": "9_cutcopypaste@6"
        }
      ]
    },
    "configuration": {
      "title": "Selection Path Copier",
      "properties": {
        "selection-path-copier.pathType": {
          "type": "string",
          "enum": [
            "relative",
            "absolute"
          ],
          "default": "relative",
          "description": "Choose between relative path (from workspace root) or absolute path"
        },
        "selection-path-copier.includeBlankLine": {
          "type": "boolean",
          "default": true,
          "description": "Include a blank line between path and code when copying"
        },
        "selection-path-copier.lineNumberFormat": {
          "type": "string",
          "enum": [
            "github",
            "editor",
            "parentheses"
          ],
          "default": "github",
          "enumDescriptions": [
            "GitHub format: file.ts#L10 or file.ts#L10-20",
            "Editor format: file.ts:10 or file.ts:10-20",
            "Parentheses format: file.ts(10) or file.ts(10-20)"
          ],
          "description": "Choose the line number reference format"
        },
        "selection-path-copier.codeFormat": {
          "type": "string",
          "enum": [
            "plain",
            "markdown"
          ],
          "default": "plain",
          "enumDescriptions": [
            "Plain text format",
            "Markdown code block with syntax highlighting"
          ],
          "description": "Choose the code format when copying with code"
        },
        "selection-path-copier.githubPermalinkType": {
          "type": "string",
          "enum": [
            "commit",
            "branch"
          ],
          "default": "commit",
          "enumDescriptions": [
            "Use commit hash for permanent reference (e.g., /blob/abc123...)",
            "Use default branch name (e.g., /blob/main or /blob/master)"
          ],
          "description": "Choose whether GitHub permalinks use commit hash or branch name"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "tsc --noEmit",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.21",
    "@types/vscode": "^1.57.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "typescript": "^5.9.3"
  }
}
